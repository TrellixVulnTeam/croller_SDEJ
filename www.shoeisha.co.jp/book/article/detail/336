<script type="text/javascript">

    var pop = $("[data-toggle=popover]").popover({
        html: true,
        container: 'body',
        content: function() {
          return $('#social-icon').html();
        }
    })
    .data('bs.popover')
    .tip()
    ;
    pop.addClass('footer-popover');
    $('.footer-share-link').on('click', function(e) {
      e.preventDefault();
      var popover = $('.i-footer-popover');
      return false;
    });

    $('.footer-share-link').on('show.bs.popover', function(e) {
      $(this).addClass('footer-show-popover');
      $(this).removeClass('footer-hide-popover');
    });
    $('.footer-share-link').on('hide.bs.popover', function(e) {
      $(this).addClass('footer-hide-popover');
      $(this).removeClass('footer-show-popover');
    });

    $(function() {
      var ua = window.navigator.userAgent.toLowerCase();
      if (ua.indexOf('iphone') != -1 && ua.indexOf('safari') !== -1) {
        pop.addClass('i-footer-popover');
      }

      var relatedWidget = RelatedBookWidget.init(document.getElementById('rec-related-book-list'));
      if (location.href.indexOf('book/article/detail/191') !== -1) {
        var books = [
          {'sho-isbn': '9784798157542'},
          {'sho-isbn': '9784798155432'},
          {'sho-isbn': '9784798153759'},
          {'sho-isbn': '9784798156866'},
        ];
        relatedWidget.fetchView(books);
      } else {
        relatedWidget.articlePage.build();
      }
    });
</script>


