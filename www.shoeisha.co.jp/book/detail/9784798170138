<script>
    cX.CCE.callQueue.push([
        'run', {
            widgetId: '442a4f1870ee1a7b06dd63ddffa4212ce73cc37d',
            targetElementId: 'cx_442a4f1870ee1a7b06dd63ddffa4212ce73cc37d'
        },
        null,
        function (data) {
            if (data.response.items[0].type == "free") {
                cX.CCE.callQueue.push([
                    'run', {
                        widgetId: "0a62e3478ed03239c3675abd3b3c13e875e793f1",
                        targetElementId: 'cx_0a62e3478ed03239c3675abd3b3c13e875e793f1'
                    },
                    null,
                    function (data) {
                        if (data.response.items[0].type == "free") {
                            cX.CCE.callQueue.push([
                                'run', {
                                    widgetId: "1e420dc302579320ee2facb41e20760a7e0062d0",
